{
    "manifest_version": 3,
    "name": "My FB Info Getter",
    "version": "1.0",
    "description": "Một tiện ích đơn giản để lấy thông tin người dùng bằng Đăng nhập Facebook.",
    "icons": {
        "16": "images/1f629.png",
        "48": "images/1f629.png",
        "128": "images/1f629.png"
    },
    "action": {
        "default_icon": {
            "16": "images/1f629.png",
            "48": "images/1f629.png"
        },
        "default_title": "Lấy thông tin Facebook",
        "default_popup": "popup.html"
    },
    "permissions": [
        "identity",
        "storage"
    ]
}